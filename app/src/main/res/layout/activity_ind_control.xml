<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ind_control"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gmri.master.hottable.IndControlActivity">


    
    <com.gmri.master.hottable.ProgressView
        android:id="@+id/controlProgressView"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/add"
        android:layout_marginLeft="20dp"
        android:id="@+id/addBtn"
        android:layout_marginStart="120dp"
        android:layout_alignBottom="@+id/controlProgressView"
        android:layout_toEndOf="@+id/testBtn" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/subtract"
        android:layout_marginLeft="20dp"
        android:id="@+id/subBtn"
        android:layout_marginEnd="124dp"
        android:layout_alignBottom="@+id/controlProgressView"
        android:layout_toStartOf="@+id/testBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testBtn"
        android:layout_marginTop="25dp"
        android:text="开关"
        android:layout_below="@+id/controlProgressView"
        android:layout_centerHorizontal="true" />

    </RelativeLayout>
